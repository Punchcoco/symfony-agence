{% extends 'base.html.twig' %}

{% block title property.title %}

{% block body %}
<div class="jumbotron">
  <div class="container">
    <div class="row">
      <div class="col-md-8">

      </div>
      <div class="col-md-4">
        <h1>{{ property.title }}</h1>
        <h2>{{property.room}} pièces - {{property.surface}} m²</h2>
        <div class="text-primary" style="font-size: 2rem;font-weight: bold;">{{property.formattedPrice}} $</div>
        <a href="#" class="btn btn-primary">Contacter l'agence</a>
      </div>
    </div>
  </div>
</div>
<div class="contaitner mt-4">
  <div class="row">




  </div>

  <p>
    {{property.description | nl2br }}
  </p>

  <div class="row">
    <div class="col-md-8">
      <h2>Caractéristiques</h2>
      <table class="table table-stripped">
        <tr>
          <td>Surface habitable</td>
          <td>{{property.surface}} m&</td>
        </tr>
        <tr>
          <td>Pièces</td>
          <td>{{property.room}} m&</td>
        </tr>
        <tr>
          <td>Chambres</td>
          <td>{{property.bedrooms}} m&</td>
        </tr>
        <tr>
          <td>Etage</td>
          <td>{{property.floor}} m&</td>
        </tr>
        <tr>
          <td>Chauffage</td>
          <td>{{property.heatType}} m&</td>
        </tr>
      </table>
    </div>

    <div class="col-md-4">
      <h2>Spécificités</h2>
    </div>
  </div>

</div>

{% endblock %}
